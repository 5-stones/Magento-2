<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">

    <!-- CATODO BEGIN : don't expose those events : gigya_map_to_magento & gigya_map_from_magento -->
    <event name="gigya_map_to_magento">
        <!-- trigger the g2cms field mapping : will map properties declared in field mapping file as g2cms or both -->
        <observer name="gigyaToMagentoFieldMappingObserver" instance="Gigya\GigyaIM\Observer\GigyaToMagentoFieldMapping" />
    </event>
    <event name="gigya_map_from_magento">
        <!-- trigger the cms2g field mapping : will map properties declared in field mapping file as cms2g or both -->
        <observer name="gigyaFromMagentoFieldMappingObserver" instance="Gigya\GigyaIM\Observer\GigyaFromMagentoFieldMapping" />
    </event>
    <!-- CATODO END -->

    <event name="gigya_pre_field_mapping">
        <!-- default implementation of g2cms field mapping : for now only gender attribute (it will effectively be mapped only if the field mapping file declares it) -->
        <observer name="defaultCMSSyncFieldMapping" instance="Gigya\GigyaIM\Observer\DefaultCMSSyncFieldMapping" />
    </event>
    <event name="pre_sync_to_gigya">
        <!-- default implementation of cms2g field mapping : for now only gender attribute (it will effectively be mapped only if the field mapping file declares it) -->
        <observer name="defaultGigyaSyncFieldMapping" instance="Gigya\GigyaIM\Observer\DefaultGigyaSyncFieldMapping" />
    </event>

</config>
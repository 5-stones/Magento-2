<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="gigya_map_to_magento">
        <observer name="gigyaToMagentoFieldMappingObserver" instance="Gigya\GigyaIM\Observer\GigyaToMagentoFieldMapping" />
    </event>
    <event name="gigya_map_from_magento">
        <observer name="gigyaFromMagentoFieldMappingObserver" instance="Gigya\GigyaIM\Observer\GigyaFromMagentoFieldMapping" />
    </event>


    <!-- FOR TEST DEMO ONLY -->
    <event name="gigya_pre_field_mapping">
        <observer name="testCMSSyncFieldMapping" instance="Gigya\GigyaIM\Observer\TestCMSSyncFieldMapping" />
    </event>
